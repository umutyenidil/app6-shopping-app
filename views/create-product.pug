<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Home Page

        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
    body
        nav.navbar.navbar-expand-lg.bg-body-tertiary
            div.container-fluid
                a(href="#").navbar-brand Shopping
                button(type="button", data-bs-toggle="collapse", data-bs-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation").navbar-toggler
                    span.navbar-toggler-icon
                div#navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item
                            a(href="#").nav-link Login
                        li.nav-item
                            a(href="#").nav-link Register

        div.container.pt-5
            div.row
                div.col-lg-3
                    div.list-group
                        a(href="").list-group-item Category 1
                        a(href="").list-group-item Category 2
                        a(href="").list-group-item Category 3
                div.col-lg-9
                    form(action="/admin/create-product", method="POST")
                        div.mb-3
                            label(for="product_name").form-label Email address
                            input(aria-describedby="product_name")#product_name.form-control
                        button(type="submit").btn.btn-primary Save Product

        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js")

