extends ../layouts/navigation-layout.pug

block navigationContent
    div.container
        form(action="/admin/products/create", method="POST").mt-5
            div.mb-3
                label(for="productName").form-label Product Name
                input(aria-describedby="productName", name="productName")#productName.form-control
            div.mb-3
                label(for="productDescription").form-label Product Description
                textarea(name="productDescription", cols="30", rows="5")#productDescription.form-control 
            div.mb-3
                label(for="productCategory").form-label Product Category
                div.row
                    each category in categoryList
                        div.col.d-flex.flex-column.align-items-center
                            input(type='checkbox', name='productCategories', value=`${category.id}`)
                            p #{category.name}
            div.mb-3
                label(for="productPrice").form-label Product Price
                input(aria-describedby="productPrice", name="productPrice")#productPrice.form-control
            div.mb-3
                label(for="productImage").form-label Product Image Url
                input(aria-describedby="productImage", name="productImage")#productImage.form-control
                div#productImage.form-text 
                    p Example Url: 
                        span.fw-bold https://picsum.photos/128/128?random=1
            button(type="submit").btn.btn-primary Save Product