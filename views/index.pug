<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Home Page

        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
    body
        nav.navbar.navbar-expand-lg.bg-body-tertiary
            div.container-fluid
                a(href="#").navbar-brand Shopping
                button(type="button", data-bs-toggle="collapse", data-bs-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation").navbar-toggle
                    span.navbar-toggler-icon
                div#navbarSupportedContent.collapse.navbar-collapse
                    ul.navbar-nav.me-auto.mb-2.mb-lg-0
                        li.nav-item
                            a(href="#").nav-link Login
                        li.nav-item
                            a(href="#").nav-link Register
        div.container.pt-5
            div.row
                div.col-lg-3
                    div.list-group
                        a(href="").list-group-item Category 1
                        a(href="").list-group-item Category 2
                        a(href="").list-group-item Category 3
                div.col-lg-9
                    div(data-ride="carousel")#mySlider.carousel.slide
                        div.carousel-indicators
                            button(type="button", data-bs-target="#mySlider", data-bs-slide-to="0", aria-current="true", aria-label="Slide 1").active
                            button(type="button", data-bs-target="#mySlider", data-bs-slide-to="1", aria-current="true", aria-label="Slide 2")
                            button(type="button", data-bs-target="#mySlider", data-bs-slide-to="2", aria-current="true", aria-label="Slide 3")
                            button(type="button", data-bs-target="#mySlider", data-bs-slide-to="3", aria-current="true", aria-label="Slide 4")
                            button(type="button", data-bs-target="#mySlider", data-bs-slide-to="4", aria-current="true", aria-label="Slide 5")
                        div.carousel-inner
                            div.carousel-item.active
                                img(src="https://picsum.photos/1280/720?random=1", alt="slider image 1").d-block.img-fluid
                            div.carousel-item
                                img(src="https://picsum.photos/1280/720?random=2", alt="slider image 2").d-block.img-fluid
                            div.carousel-item
                                img(src="https://picsum.photos/1280/720?random=3", alt="slider image 3").d-block.img-fluid
                            div.carousel-item
                                img(src="https://picsum.photos/1280/720?random=4", alt="slider image 4").d-block.img-fluid
                            div.carousel-item
                                img(src="https://picsum.photos/1280/720?random=5", alt="slider image 5").d-block.img-fluid
                        button(type="button", data-bs-target="#mySlider", data-bs-slide="prev").carousel-control-prev
                            span(aria-hidden="true").carousel-control-prev-icon
                            span.visually-hidden Previous
                        button(type="button", data-bs-target="#mySlider", data-bs-slide="next").carousel-control-next
                            span(aria-hidden="true").carousel-control-next-icon
                            span.visually-hidden Next
                    div.row
                        div.col-md-4
                            div(style="width: 18rem;").card.my-3
                                img(src="/images/image1.jpg", alt="...").card-img-top
                                div.card-body
                                    h5.card-title Product
                                    p.card-text 100 TRY
                                    a(href="#").btn.btn-primary Details
                        div.col-md-4
                            div(style="width: 18rem;").card.my-3
                                img(src="/images/image1.jpg", alt="...").card-img-top
                                div.card-body
                                    h5.card-title Product
                                    p.card-text 100 TRY
                                    a(href="#").btn.btn-primary Details
                    
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js")